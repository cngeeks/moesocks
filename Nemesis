import Prelude ()
import System.Nemesis.Env
import Air.Env
import Control.Monad

main = run nemesis

nemesis = do

  desc "halive"
  task "halive" - do
    sh "halive src/HaliveMain.hs src"

  desc "dist"
  task "dist" - do
    sh "cabal clean"
    sh "cabal configure"
    sh "cabal sdist"

  desc "test"
  task "test" - do
    forever - do
      -- sh "telnet localhost 1090;exit 0"*/
      -- sh "curl -x socks5://localhost:1090 jinjing.cc;exit 0"
      sh "curl -x socks5://localhost:1090 localhost:8080; exit 0"
      sleep 1


  desc "remote"
  task "remote" - do
    sh "cabal run -- -m remote -c dev.json +RTS -N2"
  
  desc "local"
  task "local" - do
    sh "cabal run -- -m local -c dev.json +RTS -N2"
